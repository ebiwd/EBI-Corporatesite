      $.fn.liveFilter = function (wrapper) {

        // strap the filter field as a select2 element
        $("#livefilter").select2({
            placeholder: "Filter by a keyword or two",
            // allowClear: true,
            tags: [""],
            dropdownCssClass: "lifefilter-drop",
            tokenSeparators: [",", " "]
          })
          .on("change", function (e) {
            updateIncoming();
